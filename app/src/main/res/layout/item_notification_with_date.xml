<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="8dp">

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/CommonListGroupTitleTextAppearance"
        android:padding="8dp"
        tools:text="26 августа 1812"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            android:id="@+id/time"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/CommonListItemMinorTextAppearance"
            tools:text="88:88"/>

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/CommonListItemContentTextAppearance"
            tools:text="Состоялось крупнейшее сражение Отечественной войны 1812 года"/>
    </LinearLayout>

</LinearLayout>